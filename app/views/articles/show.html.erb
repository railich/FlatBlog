<p><%= link_to 'Back to Articles', articles_path %></p>

<div class='article-present'>
    <div class="show-article-title">
        
        <%= @category.name + ' | ' + @article.title %>
    </div>
    <div class="show-article-body">
        <%= @article.body %>
    </div>
    <div class="show-footer">
        <%= link_to 'Edit', edit_article_path(@article) %> |
    </div>
</div>


<div class="show-comments">
  <div class='show-comments-title'>Comments</div>
  <div class="show-comments-blog">
    <% Comment.where(:article_id => @article).each do |cmt| %>
      <p>
        <div class="show-comment_head">
          name: <%= cmt.name %>&nbsp;|&nbsp;
          created at: <%= cmt.created_at%>
        </div>
        <div class="show-comment_body">
          <%= cmt.body %>
        </div>
      </p>
    <% end %>
  </div>  

  <div class="show-comment-form">
    <span class="comment-form-title">New comment</span>
    <%= form_for([@article, @article.comments.build]) do |f| %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label 'comment' %><br />
        <%= f.text_area :body %>
      </div>
      <p><%= f.submit %></p>
    <% end %>
  </div>    
</div>

<p><%= link_to 'Back to Articles', articles_path %></p>